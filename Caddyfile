# === Variante A: noch keine Domain, nur Server-IP / Hostname ===
:80 {
  encode gzip
  @static {
    path /static/* /favicon.ico /robots.txt
  }
  handle @static {
    header Cache-Control "public, max-age=31536000, immutable"
    file_server
  }
  handle {
    reverse_proxy app:8000
  }
}

